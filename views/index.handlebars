
<div class="jumbotron jumbotron-fluid">
  <div class="container text-center ">
    <h1 class="display-3">Burger Mania</h1>
    <p class="lead">Add a burger you want to eat and keep track of ones you have!</p>
  </div>
</div>

<div class="container" id="burger-form">
  <div class="row">
    <div class="col-md-6 offset-md-4 text-center">
      <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <button type="submit" >Add Burger</button>
        </form>
    </div>{{!-- col-md-6 --}}
  </div>{{!-- row --}}
</div>{{!-- container --}}




<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Already Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block-devoured devoured=false}}
    {{/if}}
  {{/each}}
</ul>


