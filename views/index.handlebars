
<div class="jumbotron jumbotron-fluid">
  <div class="container text-center ">
    <h1 class="display-3">Burger Mania</h1>
    <p class="lead">Add a burger you want to eat and keep track of ones you have!</p>
  </div>
</div>

<div class="container" id="burger-form">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center">
      <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <input type="text"class="form-control text-center" id="ca" name="name" placeholder="Burger Name">
          </div>

          <button type="submit" class="btn btn-dark btn-block">Add Burger</button>
        </form>
    </div>{{!-- col-md-6 --}}
  </div>{{!-- row --}}
</div>{{!-- container --}}


<div class="container" id="burger-list">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
      <div class="card">
        <div class="card-header" id="must-eat">
          Must Eat!
        </div>
        <ul class="list-group list-group-flush">
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
        </ul>
      </div>{{!-- card--}}
    </div>{{!-- col-md-4--}}
    <div class="col-md-5">
      <div class="card">
        <div class="card-header">
          Already Devoured!
        </div>
        <ul class="list-group list-group-flush">
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block-devoured devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>{{!-- card --}}
    </div>{{!-- col-md-4 --}}
    <div class="col-md-1"></div>
  </div>{{!-- row --}}
</div>{{!-- container --}}










